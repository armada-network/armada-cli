{
  "name": "armada-cli",
  "version": "0.1.7",
  "description": "Command line utility for the Armada Network",
  "homepage": "https://armadanetwork.com",
  "bin": {
    "armada": "./build/src/cli.js"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build",
    "bin": "node build/src/cli.js",
    "dev": "ts-node src/cli.ts"
  },
  "dependencies": {
    "@ledgerhq/hw-app-eth": "^6.29.10",
    "@ledgerhq/hw-transport-node-hid": "^6.27.6",
    "ethers": "^5.7.1",
    "inquirer": "^7.1.4",
    "keytar": "^7.9.0",
    "tar": "^6.1.11",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@ethersproject/abstract-provider": "^5.7.0",
    "@ethersproject/json-wallets": "^5.7.0",
    "@types/inquirer": "^9.0.2",
    "@types/node": "^18.11.0",
    "@types/node-hid": "^1.3.1",
    "@types/tar": "^6.1.3",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-config-xo": "^0.42.0",
    "eslint-config-xo-typescript": "^0.53.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/armada-network/armada-cli"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "imports": {
    "#root/*": {
      "default": "./*"
    },
    "#staging-abis/*": {
      "default": "./armada-contracts/deployments/staging"
    },
    "#testnet-abis/*": {
      "default": "./armada-contracts/deployments/testnet"
    }
  }
}
