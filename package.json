{
  "name": "armada-cli",
  "version": "0.1.7",
  "description": "Command line utility for the Armada Network",
  "homepage": "https://armadanetwork.com",
  "bin": {
    "armada": "./build/src/cli.js"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build",
    "bin": "node build/src/cli.js",
    "dev": "ts-node src/cli.ts"
  },
  "dependencies": {
    "@ledgerhq/hw-app-eth": "^6.29.10",
    "@ledgerhq/hw-transport-node-hid": "^6.27.6",
    "ethers": "^5.7.1",
    "inquirer": "^7.1.4",
    "keytar": "^7.9.0",
    "tar": "^6.1.11",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.2",
    "@types/node": "^18.11.0",
    "@types/tar": "^6.1.3",
    "@types/yargs": "^17.0.13",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "@types/node-hid": "^1.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/armada-network/armada-cli"
  },
  "imports": {
    "#root/*": {
      "default": "./*"
    },
    "#staging-abis/*": {
      "default": "./armada-contracts/deployments/staging"
    },
    "#testnet-abis/*": {
      "default": "./armada-contracts/deployments/testnet"
    }
  }
}
